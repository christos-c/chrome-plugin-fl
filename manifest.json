{
  "manifest_version": 2,

  "name": "Fallen London",
  "description": "Unofficial extension to Fallen London by Failbetter Games",
  "version": "1.0",

  "permissions": [
    "http://*.fallenlondon.storynexus.com/",
	"tabs",
	"alarms",
    "webNavigation"
